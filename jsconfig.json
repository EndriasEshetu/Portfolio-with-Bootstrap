{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "checkJs": true,
    "strict": false,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": []
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./**/*",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}